<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>科技日报 - {{ date }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @font-face {
            font-family: 'Matrix';
            src: local('Courier New');
        }

        body {
            font-family: 'Courier New', monospace;
            background: #0a0a0a;
            color: #1a1;
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Matrix rain effect background */
        .matrix-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            opacity: 0.03;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .header {
            background: rgba(10, 20, 10, 0.95);
            border: 1px solid #1a1;
            border-radius: 0;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 0 15px rgba(26, 255, 26, 0.15), inset 0 0 15px rgba(26, 255, 26, 0.05);
            position: relative;
        }

        .header::before {
            content: '';
            position: absolute;
            top: -1px;
            left: -1px;
            right: -1px;
            bottom: -1px;
            background: linear-gradient(45deg, #1a1, transparent, #1a1);
            z-index: -1;
            animation: borderGlow 3s linear infinite;
        }

        @keyframes borderGlow {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
        }

        .header h1 {
            font-size: 2.5em;
            color: #2a2;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 20px;
            text-shadow: 0 0 5px rgba(26, 255, 26, 0.5);
            animation: flicker 4s infinite;
        }

        @keyframes flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        .header .date {
            color: #3a3;
            font-size: 1.2em;
            margin-bottom: 20px;
            text-shadow: 0 0 2px rgba(26, 255, 26, 0.3);
        }

        .header .date::before {
            content: '[ ';
        }
        .header .date::after {
            content: ' ]';
        }

        .summary {
            background: rgba(26, 255, 26, 0.03);
            border-left: 3px solid #2a2;
            padding: 20px;
            font-size: 1.1em;
            color: #3a3;
            text-shadow: 0 0 2px rgba(26, 255, 26, 0.3);
            position: relative;
        }

        .summary::before {
            content: '>';
            color: #3a3;
            margin-right: 10px;
            animation: blink 1.5s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0; }
        }

        .category {
            background: rgba(15, 25, 15, 0.95);
            border: 1px solid #1a1;
            padding: 30px;
            margin-bottom: 30px;
            position: relative;
            box-shadow: 0 0 10px rgba(26, 255, 26, 0.1);
        }

        .category::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 15px;
            height: 15px;
            border-top: 2px solid #2a2;
            border-right: 2px solid #2a2;
        }

        .category::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 15px;
            height: 15px;
            border-bottom: 2px solid #2a2;
            border-left: 2px solid #2a2;
        }

        .category-title {
            font-size: 1.8em;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #2a2;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 0 0 3px rgba(26, 255, 26, 0.4);
            position: relative;
        }

        .category-title::before {
            content: '## ';
            color: #3a3;
        }

        .article-item {
            padding: 20px 0;
            border-bottom: 1px dashed rgba(0, 255, 0, 0.3);
            position: relative;
            padding-left: 30px;
        }

        .article-item::before {
            content: '▸';
            position: absolute;
            left: 0;
            color: #3a3;
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            from { transform: translateX(-10px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        .article-item:last-child {
            border-bottom: none;
        }

        .article-title {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .article-title a {
            color: #4a4;
            text-decoration: none;
            transition: all 0.3s;
            text-shadow: 0 0 2px rgba(26, 255, 26, 0.2);
        }

        .article-title a:hover {
            color: #6a6;
            text-shadow: 0 0 5px rgba(26, 255, 26, 0.5);
            background: rgba(26, 255, 26, 0.05);
            padding: 2px 5px;
        }

        .article-meta {
            display: flex;
            gap: 15px;
            color: #2a2;
            font-size: 0.85em;
            margin-bottom: 10px;
        }

        .source {
            background: rgba(26, 255, 26, 0.05);
            padding: 2px 8px;
            font-size: 0.8em;
            border: 1px solid #2a2;
        }

        .article-summary {
            color: #3a3;
            font-size: 0.95em;
            line-height: 1.7;
        }

        .article-summary img {
            display: none !important;
        }

        .ai-tag {
            display: inline-block;
            background: #2a2;
            color: #0a0;
            padding: 2px 8px;
            font-size: 0.75em;
            margin-left: 10px;
            font-weight: bold;
            text-transform: uppercase;
            box-shadow: 0 0 5px rgba(26, 255, 26, 0.3);
        }

        .footer {
            text-align: center;
            color: #2a2;
            padding: 20px;
            margin-top: 40px;
            font-size: 0.9em;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #3a3;
            text-decoration: none;
            padding: 10px 20px;
            border: 1px solid #2a2;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .back-link:hover {
            background: #2a2;
            color: #0a0;
            box-shadow: 0 0 10px rgba(26, 255, 26, 0.3);
        }

        .back-link::before {
            content: '◀ ';
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0a0a0a;
        }

        ::-webkit-scrollbar-thumb {
            background: #2a2;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #3a3;
            box-shadow: 0 0 5px rgba(26, 255, 26, 0.3);
        }

        @media (max-width: 768px) {
            body { padding: 10px; }
            .header, .category { padding: 20px; }
            .header h1 { font-size: 1.8em; }
            .article-title { font-size: 1.1em; }
        }
    </style>
</head>
<body>
    <canvas class="matrix-bg" id="matrixCanvas"></canvas>

    <div class="container">
        <a href="../index.html" class="back-link">返回矩阵索引</a>

        <div class="header">
            <h1>科技日报</h1>
            <div class="date">{{ date }}</div>
            <div class="summary">{{ summary }}</div>
        </div>

        {% for cat_id, category in categories.items() %}
        {% if articles[cat_id] %}
        <div class="category {{ cat_id }}">
            <div class="category-title">{{ category.name }}</div>

            {% for article in articles[cat_id] %}
            <div class="article-item">
                <div class="article-title">
                    <a href="{{ article.url }}" target="_blank" rel="noopener">
                        {{ article.title }}
                        {% if article.is_ai_related %}<span class="ai-tag">AI</span>{% endif %}
                    </a>
                </div>
                <div class="article-meta">
                    <span class="source">[{{ article.source }}]</span>
                </div>
                <div class="article-summary">{{ article.summary }}</div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
        {% endfor %}

        <div class="footer">
            <p>>> 数据采集自各科技资讯源 | AI矩阵持续优化中</p>
            <p>>> SYSTEM STATUS: ONLINE | MATRIX VERSION 2.0</p>
        </div>
    </div>

    <script>
        // Matrix rain effect
        const canvas = document.getElementById('matrixCanvas');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789@#$%^&*()_+-=[]{}|;:,.<>?/~`';
        const charArray = chars.split('');

        const fontSize = 14;
        const columns = canvas.width / fontSize;

        const drops = [];
        for (let i = 0; i < columns; i++) {
            drops[i] = 1;
        }

        function drawMatrix() {
            ctx.fillStyle = 'rgba(10, 10, 10, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#2a2';
            ctx.font = fontSize + 'px monospace';

            for (let i = 0; i < drops.length; i++) {
                const text = charArray[Math.floor(Math.random() * charArray.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(drawMatrix, 35);

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
</body>
</html>
