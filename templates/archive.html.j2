<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>科技日报归档 - 矩阵数据索引</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', monospace;
            background: #0a0a0a;
            color: #1a1;
            min-height: 100vh;
            padding: 20px;
            overflow-x: hidden;
        }

        .matrix-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            opacity: 0.03;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .header {
            background: rgba(10, 20, 10, 0.95);
            border: 1px solid #1a1;
            padding: 40px;
            margin-bottom: 30px;
            position: relative;
            box-shadow: 0 0 15px rgba(26, 255, 26, 0.15), inset 0 0 15px rgba(26, 255, 26, 0.05);
        }

        .header::before {
            content: '';
            position: absolute;
            top: -1px;
            left: -1px;
            right: -1px;
            bottom: -1px;
            background: linear-gradient(45deg, #1a1, transparent, #1a1);
            z-index: -1;
            animation: borderGlow 3s linear infinite;
        }

        @keyframes borderGlow {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
        }

        .header h1 {
            font-size: 2.5em;
            color: #2a2;
            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 5px rgba(26, 255, 26, 0.5);
            animation: flicker 4s infinite;
            margin-bottom: 10px;
        }

        @keyframes flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        .header p {
            color: #3a3;
            font-size: 1.1em;
            text-shadow: 0 0 2px rgba(26, 255, 26, 0.3);
        }

        .header p::before {
            content: '>> ';
        }

        .filter {
            background: rgba(15, 25, 15, 0.95);
            border: 1px solid #1a1;
            padding: 20px;
            margin-bottom: 30px;
            position: relative;
        }

        .filter::after {
            content: 'FILTER:';
            position: absolute;
            top: -10px;
            left: 20px;
            background: #0a0a0a;
            padding: 0 10px;
            font-size: 0.9em;
            color: #3a3;
        }

        .filter button {
            padding: 10px 25px;
            margin: 5px;
            border: 1px solid #2a2;
            cursor: pointer;
            font-size: 1em;
            transition: all 0.3s;
            background: rgba(26, 255, 26, 0.05);
            color: #3a3;
            font-family: 'Courier New', monospace;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .filter button:hover {
            background: #2a2;
            color: #0a0;
            box-shadow: 0 0 10px rgba(26, 255, 26, 0.3);
        }

        .filter button.active {
            background: #2a2;
            color: #0a0;
            box-shadow: 0 0 10px rgba(26, 255, 26, 0.4);
        }

        .archive-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 25px;
        }

        .archive-item {
            background: rgba(15, 25, 15, 0.95);
            border: 1px solid #1a1;
            padding: 25px;
            transition: all 0.3s;
            cursor: pointer;
            text-decoration: none;
            color: #3a3;
            display: block;
            position: relative;
            box-shadow: 0 0 10px rgba(26, 255, 26, 0.1);
        }

        .archive-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(26, 255, 26, 0.25), 0 5px 15px rgba(0, 0, 0, 0.5);
            border-color: #2a2;
        }

        .archive-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: #2a2;
            transition: width 0.3s;
        }

        .archive-item:hover::before {
            width: 100%;
        }

        .archive-item::after {
            content: '►';
            position: absolute;
            top: 25px;
            right: 25px;
            font-size: 0.8em;
            opacity: 0;
            transition: all 0.3s;
        }

        .archive-item:hover::after {
            opacity: 1;
            right: 15px;
        }

        .archive-item .date {
            color: #4a4;
            font-size: 0.85em;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px dashed rgba(26, 255, 26, 0.2);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .archive-item .date::before {
            content: '[ ';
        }

        .archive-item .date::after {
            content: ' ]';
        }

        .archive-item .summary {
            color: #3a3;
            font-size: 0.95em;
            line-height: 1.7;
        }

        .archive-item .summary::before {
            content: '>> ';
            opacity: 0.7;
        }

        .empty {
            background: rgba(15, 25, 15, 0.95);
            border: 1px solid #1a1;
            padding: 60px 40px;
            text-align: center;
            color: #3a3;
            font-size: 1.3em;
            position: relative;
        }

        .empty::before {
            content: '⚠';
            font-size: 2em;
            display: block;
            margin-bottom: 20px;
            animation: blink 1.5s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0; }
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0a0a0a;
        }

        ::-webkit-scrollbar-thumb {
            background: #2a2;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #3a3;
            box-shadow: 0 0 5px rgba(26, 255, 26, 0.3);
        }

        @media (max-width: 768px) {
            body { padding: 10px; }
            .header { padding: 20px; }
            .archive-list {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <canvas class="matrix-bg" id="matrixCanvas"></canvas>

    <div class="container">
        <div class="header">
            <h1>科技日报归档</h1>
            <p>矩阵数据索引 - 科技资讯历史记录</p>
        </div>

        <div class="filter">
            <button onclick="filterByYear('all')" class="active" id="btn-all">全部数据</button>
            {% for year in years %}
            <button onclick="filterByYear('{{ year }}')" id="btn-{{ year }}">{{ year }}</button>
            {% endfor %}
        </div>

        <div class="archive-list" id="archive-list">
            {% for item in archive %}
            <a href="{{ item.path }}" class="archive-item" data-year="{{ item.year }}">
                <div class="date">{{ item.date }}</div>
                <div class="summary">{{ item.summary }}</div>
            </a>
            {% endfor %}
        </div>

        {% if not archive %}
        <div class="empty">
            [暂无归档数据] 系统正在采集...
        </div>
        {% endif %}
    </div>

    <script>
        // Matrix rain effect
        const canvas = document.getElementById('matrixCanvas');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789@#$%^&*()_+-=[]{}|;:,.<>?/~`';
        const charArray = chars.split('');

        const fontSize = 14;
        const columns = canvas.width / fontSize;

        const drops = [];
        for (let i = 0; i < columns; i++) {
            drops[i] = 1;
        }

        function drawMatrix() {
            ctx.fillStyle = 'rgba(10, 10, 10, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#2a2';
            ctx.font = fontSize + 'px monospace';

            for (let i = 0; i < drops.length; i++) {
                const text = charArray[Math.floor(Math.random() * charArray.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(drawMatrix, 35);

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        // Filter functionality
        function filterByYear(year) {
            document.querySelectorAll('.filter button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById('btn-' + year).classList.add('active');

            const items = document.querySelectorAll('.archive-item');
            items.forEach(item => {
                if (year === 'all' || item.dataset.year === year) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
